<!DOCTYPE html>
<html>
  <head>
    <title>Hakamile</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <%= link_to "Hakamile", root_path %>
        <ul>

          <% if user_signed_in? %>
            <%= button_to "サインアウト", destroy_user_session_path, method: :delete %>
          <% else %>       
            <li><%= link_to "新規登録", new_user_registration_path %></li>
            <li><%= link_to "サインイン", new_user_session_path %></li>
          <% end %>
            <li><%= link_to "About", about_path %></li>
            <li><a href="/graves">お墓リスト</a></li>
            <li><a href="/mypage">MY PAGE</a></li>
        </ul>
        <div class="header-search">
        <form action="/search" method="get" id="search-form">
            <input type="text" name="query" placeholder="キーワードで検索..." class="search-input">
            <button type="submit" class="search-button">検索</button>
        </form>
        </div>
      </nav>
    </header>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
