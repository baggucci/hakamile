<div class="container my-4">
  <h3>お問い合わせ一覧</h3>

  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th>ID</th>
        <th>受付日時</th>
        <th>お名前</th>
        <th>メールアドレス</th>
        <th>種別</th>
        <th>ステータス</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @inquiries.each do |inquiry| %>
        <tr>
          <td><%= inquiry.id %></td>
          <td><%= l inquiry.created_at, format: :short %></td>
          <td><%= inquiry.name %></td>
          <td><%= inquiry.email %></td>
          <td><%= inquiry.category_i18n %></td>
          <td>
            <span class="badge 
              <%= 'bg-danger' if inquiry.pending? %>
              <%= 'bg-warning' if inquiry.processing? %>
              <%= 'bg-success' if inquiry.resolved? %>">
              <%= inquiry.status_i18n %>
            </span>
          </td>
          <td>
            <%= link_to "詳細確認", admin_inquiry_path(inquiry), class: "btn btn-info btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>