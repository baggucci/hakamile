<div class="container my-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2 class="text-center mb-4">お問い合わせフォーム</h2>
      <%= form_with model: @inquiry, url: inquiries_path, local: true do |f| %>
        <div class="form-group mb-3">
          <%= f.label :name, "お名前" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :category, "お問い合わせ種別" %>
          <%= f.select :category, Inquiry.categories.keys.map { |k| [I18n.t("enums.inquiry.category.#{k}"), k] }, {}, {class: "form-select"} %>
        </div>
        <div class="form-group mb-4">
          <%= f.label :message, "お問い合わせ内容" %>
          <%= f.text_area :message, class: "form-control", rows: 7 %>
        </div>
        <%= f.submit "送信する", class: "btn btn-primary w-100" %>
      <% end %>
    </div>
  </div>
</div>