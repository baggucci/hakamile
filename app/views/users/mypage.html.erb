<%# app/views/public/users/mypage.html.erb %>

<div class="container mt-4">
  <div class="row">
    <!-- 左側: プロフィールエリア -->
    <div class="col-md-4">
      <h4>マイページ</h4>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= @user.name %></h5>
          <p class="card-text text-muted"><%= simple_format(@user.profile) %></p>
          <%= link_to "プロフィールを編集する", edit_mypage_path, class: "btn btn-outline-secondary btn-block" %>
        </div>
      </div>
    </div>

    <!-- 右側: 投稿一覧エリア -->
    <div class="col-md-8">
      <h4>自分の投稿一覧</h4>
      <hr>
      <% if @posts.any? %>
        <% @posts.each do |post| %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
              <p class="card-text"><%= truncate(post.body, length: 150) %></p>
              <div class="text-right">
                <%= link_to "編集", edit_post_path(post), class: "btn btn-success btn-sm" %>
                <%= link_to "削除", post_path(post), method: :delete, data: { "turbo-method": :delete, "turbo-confirm": "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
              </div>
            </div>
            <div class="card-footer text-muted">
              投稿日時: <%= l post.created_at, format: :long %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-5">
          <p>まだ投稿がありません。</p>
          <%= link_to "最初の投稿をする", new_post_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
