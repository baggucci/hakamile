<%# app/views/public/users/edit.html.erb %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h3>プロフィール編集</h3>
      
      <%= form_with model: @user, url: mypage_path, method: :patch, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, "名前" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :profile, "自己紹介" %>
          <%= f.text_area :profile, rows: 5, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.submit "更新する", class: "btn btn-primary" %>
          <%= link_to "マイページに戻る", mypage_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
