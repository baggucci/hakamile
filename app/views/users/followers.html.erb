<h3><%= @user.name %>さんのフォロワー一覧</h3>

<% if @users.any? %>
  <%# Bootstrapのグリッドコンテナを開始 %>
  <div class="row">
    <% @users.each do |user| %>
      <%# 各ユーザーが1つのカラム（ボックス）になる %>
      <div class="col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-body d-flex justify-content-between align-items-center">
            
            <%# ユーザー情報（名前のリンク） %>
            <div class="user-info">
              <%= link_to user.name, user_path(user), class: "fw-bold text-dark text-decoration-none" %>
            </div>
            
            <%# フォロー/アンフォローボタン %>
            <div class="user-actions">
              <%= render 'users/follow_unfollow_button', user: @user %>
            </div>

          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>フォロワーがいません。</p>
<% end %>