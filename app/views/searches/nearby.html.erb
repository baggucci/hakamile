<div class="container mt-4">
  <h1 class="font-serif">近くのお墓</h1>

  <%# --- Flashメッセージの表示 --- %>
  <% if flash.now[:alert] %>
    <div class="alert alert-warning" role="alert">
      <%= flash.now[:alert] %>
    </div>
  <% end %>

  <%# --- 検索結果の表示 --- %>
  <div class="grave-list">
    <% if @graves.any? %>
      <p class="text-muted"><%= @graves.count %>件のお墓が見つかりました。</p>
      <% @graves.each do |grave| %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= link_to grave.name, grave_path(grave) %></h5>
            <p class="card-text"><%= grave.prefecture %><%= grave.address %></p>
            <%# 必要であれば距離などを表示 %>
          </div>
        </div>
      <% end %>
    <% else %>
      <%# 位置情報取得失敗時以外で結果が0件の場合 %>
      <% unless flash.now[:alert] %>
        <div class="alert alert-info" role="alert">
          近くにお墓は見つかりませんでした。
        </div>
      <% end %>
    <% end %>
  </div>

  <hr>
  <%= link_to "お墓リストに戻る", graves_path, class: "btn btn-secondary" %>
</div>