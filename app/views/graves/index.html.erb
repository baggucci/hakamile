  <div class="page-header">
    <h3>墓所一覧</h3>
  </div>

<div class="container py-4">
  <div class="list-container bg-white shadow-sm">
    <table class="table table-hover mb-0">
      <thead class="thead-light">
        <tr>
          <th scope="col" style="width: 40%;">名称</th>
          <th scope="col" style="width: 25%;">都道府県</th>
          <th scope="col" style="width: 35%;">ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @graves.each do |grave| %>
          <tr>
            <td>
              <div class="d-flex align-items-center">
                <% if grave.main_image.attached? %>
                  <%= image_tag grave.main_image.variant(resize_to_fill: [50, 50]), class: "rounded me-3" %>
                <% else %>
                  <div class="list-img-placeholder rounded me-3">
                    <i class="fas fa-camera text-muted"></i>
                  </div>
                <% end %>
                <%= link_to grave.name, grave_path(grave), class: "fw-bold" %>
              </div>
            </td>
            <td class="align-middle"><%= grave.prefecture %></td>
            <td class="align-middle"><%= grave.genres.pluck(:name).join(' / ') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>