<!-- app/views/graves/index.html.erb -->
<!-- 一般ユーザー向け 墓所一覧ページ -->
<div class="container">
  <div class="my-4">
    <h3>墓所一覧</h3>
  </div>

  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th>名称</th>
        <th>都道府県</th>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @graves.each do |grave| %>
        <tr>
          <td><%= grave.name %></td>
          <td><%= grave.prefecture %></td>
          <td>
          <%= grave.genres.pluck(:name).join(' / ') %>
          </td>
          <td>
            <%= link_to "詳細", grave_path(grave), class: "btn btn-info btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
